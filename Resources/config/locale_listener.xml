<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="klipper_user.subscriber.locale"
                 class="Klipper\Component\User\Listener\LocaleSubscriber">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="translator" />
        </service>

        <service id="klipper_user.authentication.locale_session.provider"
                 class="Klipper\Component\User\Security\Authentication\Provider\LocaleSessionProvider">
        </service>

        <service id="klipper_user.authentication.locale_session.listener"
                 class="Klipper\Component\User\Security\Http\Firewall\LocaleSessionListener">
            <argument type="service" id="klipper_user.subscriber.locale" />
            <argument type="collection"/>
        </service>
    </services>
</container>
